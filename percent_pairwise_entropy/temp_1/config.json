{
    "dataset_reader": {
        "type": "coref",
        "fully_labelled_threshold": 700,
        "max_span_width": 10,
        "simulate_user_inputs": true,
        "token_indexers": {
            "token_characters": {
                "type": "characters"
            },
            "tokens": {
                "type": "single_id",
                "lowercase_tokens": false
            }
        }
    },
    "iterator": {
        "type": "bucket",
        "batch_size": 1,
        "padding_noise": 0,
        "sorting_keys": [
            [
                "text",
                "num_tokens"
            ]
        ]
    },
    "model": {
        "type": "coref",
        "antecedent_feedforward": {
            "activations": "relu",
            "dropout": 0.2,
            "hidden_dims": 150,
            "input_dim": 3680,
            "num_layers": 2
        },
        "coarse_to_fine_pruning": false,
        "context_layer": {
            "type": "lstm",
            "bidirectional": true,
            "dropout": 0.2,
            "hidden_size": 200,
            "input_size": 400,
            "num_layers": 1
        },
        "device": 0,
        "feature_size": 20,
        "initializer": [
            [
                ".*linear_layers.*weight",
                {
                    "type": "xavier_normal"
                }
            ],
            [
                ".*scorer._module.weight",
                {
                    "type": "xavier_normal"
                }
            ],
            [
                "_distance_embedding.weight",
                {
                    "type": "xavier_normal"
                }
            ],
            [
                "_span_width_embedding.weight",
                {
                    "type": "xavier_normal"
                }
            ],
            [
                "_context_layer._module.weight_ih.*",
                {
                    "type": "xavier_normal"
                }
            ],
            [
                "_context_layer._module.weight_hh.*",
                {
                    "type": "orthogonal"
                }
            ]
        ],
        "lexical_dropout": 0.5,
        "max_antecedents": 100,
        "max_span_width": 10,
        "mention_feedforward": {
            "activations": "relu",
            "dropout": 0.2,
            "hidden_dims": 150,
            "input_dim": 1220,
            "num_layers": 2
        },
        "spans_per_word": 0.4,
        "text_field_embedder": {
            "token_embedders": {
                "token_characters": {
                    "type": "character_encoding",
                    "embedding": {
                        "embedding_dim": 16,
                        "num_embeddings": 262
                    },
                    "encoder": {
                        "type": "cnn",
                        "embedding_dim": 16,
                        "ngram_filter_sizes": [
                            5
                        ],
                        "num_filters": 100
                    }
                },
                "tokens": {
                    "type": "embedding",
                    "embedding_dim": 300,
                    "pretrained_file": "https://s3-us-west-2.amazonaws.com/allennlp/datasets/glove/glove.6B.300d.txt.gz",
                    "trainable": false
                }
            }
        }
    },
    "train_data_path": "../data/coref_ontonotes/train.english.v4_gold_conll",
    "validation_data_path": "../data/coref_ontonotes/dev.english.v4_gold_conll",
    "test_data_path": "../data/coref_ontonotes/test.english.v4_gold_conll",
    "trainer": {
        "active_learning": {
            "epoch_interval": 20,
            "model_type": "coref",
            "num_labels": 0.8,
            "patience": 2,
            "query_type": "pairwise",
            "replace_with_next_pos_edge": true,
            "selector": {
                "type": "entropy",
                "use_clusters": true
            },
            "simulate_user_inputs": true,
            "use_percent": true
        },
        "cuda_device": [
            1
        ],
        "grad_norm": 5,
        "learning_rate_scheduler": {
            "type": "reduce_on_plateau",
            "factor": 0.5,
            "mode": "max",
            "patience": 2
        },
        "num_epochs": 300,
        "optimizer": {
            "type": "adam"
        },
        "patience": 10,
        "validation_metric": "+coref_f1"
    },
    "evaluate_on_test": true,
    "held_out_iterator": {
        "type": "basic",
        "batch_size": 1
    },
    "validation_dataset_reader": {
        "type": "coref",
        "max_span_width": 10,
        "token_indexers": {
            "token_characters": {
                "type": "characters"
            },
            "tokens": {
                "type": "single_id",
                "lowercase_tokens": false
            }
        }
    }
}